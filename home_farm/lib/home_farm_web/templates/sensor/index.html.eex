<div class="card">
  <div class="card-header">
    <h5 class="mt-1">Sensors
      <a href="<%= Routes.sensor_path(@conn, :new)  %>" class="float-right btn btn-sm btn-primary">
        Add New
      </a>
    </h5>
  </div>
  <div class="card-body">
    <table class="table">
      <thead>
        <tr>
          <th>#</th><th>Name</th><th>Key</th><th>Type</th><th></th>
        </th>
      </thead>
      <tbody>
        <%= for sensor <- @sensors do  %>
          <tr>
            <td><%= sensor.id %></td>
            <td><%= sensor.name  %></td>
            <td><%= sensor.key %></td>
            <td><%= sensor.type  %></td>
            <td>
              <a class="btn btn-info btn-sm" href="<%= Routes.sensor_path(@conn, :show, sensor) %>">Show</a>
              <a class="btn btn-primary btn-sm" href="<%= Routes.sensor_path(@conn, :edit, sensor) %>">Edit</a>
              <%= link "Delete", to: Routes.sensor_path(@conn, :delete, sensor), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
